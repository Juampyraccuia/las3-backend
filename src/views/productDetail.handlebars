<div class="product-detail-container">
    <div class="product-header">
        <h1 class="product-title">{{product.title}}</h1>
    </div>

    {{#if product.thumbnails.[0]}}
        <img src="{{product.thumbnails.[0]}}" alt="{{product.title}}" class="product-image">
    {{/if}}

    <div class="product-info">
        <div class="product-description">
            <p>{{product.description}}</p>
        </div>

        <div class="product-meta">
            <p class="price">$ {{product.price}}</p>
            <p class="stock {{#if product.stock}}in-stock{{else}}out-of-stock{{/if}}">
                {{#if product.stock}}
                    Stock disponible: {{product.stock}}
                {{else}}
                    Producto sin stock
                {{/if}}
            </p>
            <p class="category">Categoría: {{product.category}}</p>
            <p class="code">Código: {{product.code}}</p>
            {{#if product.stock}}
                <div class="quantity-selector">
                    <label for="quantity">Cantidad:</label>
                    <input type="number" id="quantity" min="1" max="{{product.stock}}" value="1">
                </div>
                <button class="add-to-cart" onclick="addToCart('{{product._id}}')">Agregar al Carrito</button>
            {{else}}
                <button class="add-to-cart" disabled style="background-color: #ccc;">Sin Stock</button>
            {{/if}}
        </div>
    </div>

    <a href="/products" class="back-link">← Volver a la lista de productos</a>
</div>

<script src="/js/productDetail.js"></script>